<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Penduduk</title>
</head>

<body>
    <!-- Navbar Start -->
    <%- include ('../layouts/navbar.ejs') %>
        <!-- Navbar End -->
        <!--  Content Start  -->
        <div class="card m-5">
            <div class="card-header">
                <h3>Tambah Penduduk</h3>
            </div>
            <div class="card-body">
                <form action="/addCitizen" method="post">
                    <div class="row mb-3">
                        <label for="nik" class="col-sm-2 col-form-label"><b>NIK</b></label>
                        <div class="col-sm-10">
                            <input type="text" name="nik" class="form-control" placeholder="3215262512040005">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="nama" class="col-sm-2 col-form-label"><b>Nama</b></label>
                        <div class="col-sm-10">
                            <input type="text" name="nama" class="form-control" placeholder="Nathan Raphael">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="alamat" class="col-sm-2 col-form-label"><b>Alamat</b></label>
                        <div class="col-sm-10">
                            <input type="text" name="alamat" class="form-control" placeholder="Jl.Surya Sumantri">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="tgl_lahir" class="col-sm-2 col-form-label"><b>Tanggal Lahir</b></label>
                        <div class="col-sm-10">
                            <input type="date" name="tgl_lahir" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group mt-2">
                        <label for="gol_darah" class="col-sm-2 col-form-label"><b>Golongan Darah</b></label>
                        <div class="col">
                            <select class="form-control" name="gol_darah" required>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="O">O</option>
                                <option value="AB">AB</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <label for="agama" class="col-sm-2 col-form-label"><b>Agama</b></label>
                        <div class="col">
                            <select class="form-control" name="agama" required>
                                <option value="Budha">Budha</option>
                                <option value="Hindu">Hindu</option>
                                <option value="Islam">Islam</option>
                                <option value="Katolik">Katolik</option>
                                <option value="Kristen">Kristen</option>
                                <option value="Kong Hu Cu">Kong Hu Cu</option>
                                <option value="Lainnya">Lainnya</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <label for="status" class="col-sm-2 col-form-label"><b>Status</b></label>
                        <div class="col">
                            <select class="form-control" name="status" required>
                                <option value="Belum Menikah">Belum Menikah</option>
                                <option value="Menikah">Menikah</option>
                                <option value="Duda">Duda</option>
                                <option value="Janda">Janda</option>
                            </select>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary mt-3" value="Tambahkan">
                </form>
            </div>
        </div>
        <!--  Content End  -->
</body>

</html>