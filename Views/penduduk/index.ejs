<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Penduduk</title>
</head>

<body>
    <!-- Navbar Start -->
    <%- include ('../layouts/navbar.ejs') %>
        <!-- Navbar End -->

        <!--  Content Start -->
        <div class="card m-5">
            <div class="card-header">
                <a href="/createPenduduk" role="button" class="btn btn-success m-2">Tambah Penduduk</a>
            </div>
            <div class="card-body m-2">
                <h3>List Of Penduduk</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">NIK</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Details</th>
                            <th scope="col">No KK</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% penduduk.forEach(penduduk=> { %>
                            <tr>
                                <td>
                                    <%= user.nik %>
                                </td>
                                <td>
                                    <%= user.nama %>
                                </td>
                                <td>
                                    <p>
                                        <b>Alamat :</b>
                                        <%= user.alamat %>
                                    </p>
                                    <p>
                                        <b>Tanggal Lahir :</b>
                                        <%= user.tgl_lahir %>
                                    </p>
                                    <p>
                                        <b>Golongan Darah :</b>
                                        <%= user.gol_darah %>
                                    </p>
                                    <p>
                                        <b>Status :</b>
                                        <%= user.status %>
                                    </p>
                                </td>
                                <td>
                                    <%= user.kartu_keluarga_id %>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <form action="/editPenduduk" method="get">
                                            <button type="submit" class="btn btn-warning">Edit</button>
                                        </form>
                                        <form action="" method="post"
                                            onsubmit="return confirm('Apakah Anda yakin ingin menghapus data ini?');">
                                            <button type="submit" class="btn btn-danger">Hapus</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <!--  Content End -->
</body>

</html>