<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
</head>

<body>
    <!-- Navbar Start -->
    <%- include ('../layouts/navbar.ejs') %>
        <!-- Navbar End -->

        <!--  Content Start -->
        <div class="card m-5">
            <div class="card-header">
                <a href="/createUser" role="button" class="btn btn-success m-2">Tambah User</a>
            </div>
            <div class="card-body m-2">
                <h3>List Of Users</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Email</th>
                            <th scope="col">Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(users=> { %>
                            <tr>
                                <td>
                                    <%= users.id %>
                                </td>
                                <td>
                                    <%= users.nama %>
                                </td>
                                <td>
                                    <%= users.email %>
                                </td>
                                <td>
                                    <%= users.role %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <!--  Content End -->
</body>

</html>